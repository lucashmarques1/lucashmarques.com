RewriteEngine On

# Forçar HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Forçar WWW (redirecionar sem WWW → WWW)
RewriteCond %{HTTP_HOST} !^www\.lucashmarques\.com$ [NC]
RewriteRule ^(.*)$ https://www.lucashmarques.com/$1 [L,R=301]

# Redirecionar /index.html para a raiz com WWW
RewriteCond %{THE_REQUEST} \s/index\.html
RewriteRule ^index\.html$ https://www.lucashmarques.com/ [R=301,L]
